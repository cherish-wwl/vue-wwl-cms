{

  "include": [
    "example/**/*.ts",
    "example/**/*.tsx",
    "example/**/*.vue",
    "types"
  ],
  "exclude": [
    "node_modules",
    "build",
    "*/dist",
    "src"
  ],
  "compilerOptions": {
    "outDir": "./built/",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "webpack-env"
    ],

    "typeRoots": [
      // "./node_modules/vue/types",
      "./types",
    ],
    "pretty": true,
  }

}
